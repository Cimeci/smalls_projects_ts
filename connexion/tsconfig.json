{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "module": "ES2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["ts/*.ts"],
  "exclude": ["dist", "node_modules"]
}